<nav aria-label="Posts Page navigation">
  <ul class="pagination">
      <% if(books.page - 1) { %>
        <li class="page-item">
          <a class="page-link" href="<%= paginateUrl %><%= books.page - 1 %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      <% } %>

  <% if (books.pages > 1 && books.docs.length) { %>
    <% for(let i = 1; i <= books.pages; i++) { %>
      <li class="page-item">
        <a href="<%= paginateUrl %><%= i %>" class="page-link"
           <%= i === books.page ? 'style=color:#000;' : '' %>
          ><%= i %></a>
      </li>
    <% } %>
  <% } %>

    <% if((books.page + 1) <= books.pages) { %>
      <li class="page-item">
        <a class="page-link" href="<%= paginateUrl %><%= books.page + 1 %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
      <% } %>
  </ul>
</nav>
