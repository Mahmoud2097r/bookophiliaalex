<% layout('layouts/boilerplate2') -%>

<%if (error && error.length) { %>
    <div class="container" style="margin-top:20px;">
        <div class="bg-danger alert alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="close closer" data-dismiss="alert" aria-label="Close">
                <i class="far fa-times-circle" aria-hidden="true"></i>
            </button>
        </div>
    </div>
<% } %>
<%if (success && success.length){%>
    <div class="container">
        <div class="bg-success alert alert-dismissible fade show mt-4" role="alert">
            <%= success %>
            <button type="button" class="close closer" data-dismiss="alert" aria-label="Close">
                <i class="far fa-times-circle" aria-hidden="true"></i>
            </button>
        </div>
    </div>
<%}%>

<div class="container verify">
    <form action="/verify-email?_method=PUT" method="POST" class="validationForm" novalidate>
        <div class="form-group">
            <div class="form-group">
                <label for="randDigetNumber"> Enter Digits:</label>
                <input type="number" name="randDigetNumber" id="randDigetNumber" class="form-control"
                    required>
                <div class="invalid-feedback">
                    Please fill the field above.
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-warning" type="submit" value="Verify">
            </div>
        </div>
    </form>
</div>

