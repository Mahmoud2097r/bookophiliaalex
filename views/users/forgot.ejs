<% layout('layouts/boilerplate2') -%>


<div class="container verify">
    <h1 class="text-center mt-5">Forgot Password</h1>
    <div class="form-group">
        <form action="/forgot-password?_method=PUT" method="POST" class="validationForm" novalidate>
            <div class="form-group">
                <input class="form-control" id="email" type="email" name="email" placeholder="email@ecample.com"
                    autofocus required>
                <div class="invalid-feedback">
                    Please fill the field above.
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-warning" type="submit" value="Reset Password">
            </div>

        </form>
    </div>
</div>